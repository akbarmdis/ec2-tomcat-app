# Copy this file to terraform.tfvars and update with your values

# AWS region where resources will be created
aws_region = "us-west-2"

# Project name (will be used as prefix for resource names)
project_name = "tomcat-app"

# EC2 instance type
instance_type = "t3.micro"

# Tomcat version to install
tomcat_version = "9.0.82"

# Your SSH public key content (the content of ~/.ssh/id_rsa.pub)
# Replace with your actual public key
public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABAQC... your-email@example.com"
